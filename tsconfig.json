{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "xoid": ["./packages/xoid/src"],
      "xoid/jsx-runtime": ["./packages/xoid/copy/jsx-runtime"],
      "@xoid/react/runtime": ["./packages/react/src/runtime"],
      "@xoid/vue/runtime": ["./packages/vue/src/runtime"],
      "@xoid/*": ["./packages/*/src"]
    },
    "target": "es5",
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "strict": true,
    "importHelpers": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "dist/ts-out",
    "esModuleInterop": true
  },
  "include": ["packages", "tests", "examples"]
}