{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "xoid": ["./packages/xoid/src"],
      "@xoid/*": ["./packages/*/src"],
      "doja/jsx-runtime": ["./packages-doja/doja/copy/jsx-runtime"],
      "doja": ["./packages-doja/doja/src"],
      "@doja/*": ["./packages-doja/*/src"]
    },
    "target": "es5",
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "strict": true,
    "importHelpers": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "dist/ts-out",
    "esModuleInterop": true
  },
  "include": ["packages", "tests", "packages-doja", "tests-doja", "examples"]
}