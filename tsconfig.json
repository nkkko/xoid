{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "xoid": ["./packages/xoid/src"],
      "@xoid/*": ["./packages/*/src"],
      // "project": ["./packages/incubator/project/project/src"],
      // "@project/*": ["./packages/incubator/project/*/src"],
      // "project/jsx-runtime": ["./packages/incubator/project/project/copy/jsx-runtime"]
    },
    "target": "es5",
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "strict": true,
    "importHelpers": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "dist/ts-out",
    "esModuleInterop": true
  },
  "include": ["packages", "tests", "examples"]
}