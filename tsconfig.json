{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "xoid": ["./packages/xoid/src"],
      "@xoid/*": ["./packages/*/src"],
      "nity": ["./packages/nity/nity/src"],
      "@nity/*": ["./packages/nity/*/src"],
      "nity/jsx-runtime": ["./packages/nity/nity/copy/jsx-runtime"]
    },
    "target": "es5",
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "strict": true,
    "importHelpers": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "dist/ts-out",
    "esModuleInterop": true
  },
  "include": ["packages", "tests", "examples"]
}